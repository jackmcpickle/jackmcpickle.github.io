{
  "name": "jackmcpickle.github.io",
  "description": "Jack McNicol personal website",
  "repository": {
    "type": "git",
    "url": "https://github.com/jackmcpickle/jackmcpickle.github.io/"
  },
  "version": "3.0.0",
  "scripts": {
    "start": "npm-run-all --parallel server css",
    "server": "browser-sync start --server public --files 'public/**/*.*'",
    "css": "postcss -c postcss.config.js -o public/css/app.css assets/css/app.css --watch",
    "build": "NODE_ENV=production postcss -c postcss.config.js -o public/css/app.css assets/css/app.css"
  },
  "browserslist": [
    ">= 0.25% in AU"
  ],
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "2.3.0",
    "browser-sync": "2.26.12",
    "cssnano": "4.1.10",
    "npm-run-all": "4.1.5",
    "postcss": "7.0.32",
    "postcss-cli": "7.1.1",
    "postcss-preset-env": "6.7.0"
  },
  "dependencies": {
    "postcss-import": "12.0.1",
    "tailwindcss": "1.6.2"
  }
}
